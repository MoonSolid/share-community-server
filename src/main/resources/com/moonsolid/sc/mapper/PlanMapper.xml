<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="PlanMapper">

  <resultMap type="Plan" id="PlanMap">
    <id column="plan_id"   property="no"/>
    <result column="place"  property="place"/>
    <result column="cont"  property="description"/>
    <result column="memo"    property="memo"/>
    <result column="cost"    property="cost"/>
    <result column="titl"    property="title"/>
  </resultMap>
    
  <insert id="insertPlan" parameterType="Plan">
    insert into sc_plan(
      place, 
      cont, 
      memo, 
      cost,
      titl)
    values(
      #{place}, 
      #{description}, 
      #{memo}, 
      #{cost},
      #{title})
  </insert>
  
  <select id="selectPlan" resultMap="PlanMap">
    select 
      plan_id, 
      place, 
      cont, 
      memo, 
      cost,
      titl
    from sc_plan
  </select>

  
  <select id="selectDetail" resultMap="PlanMap" parameterType="int">
    select 
      plan_id, 
      place, 
      cont, 
      memo, 
      cost,
      titl
    from 
      sc_plan
    where 
      plan_id=#{no}
  </select>
  
  <update id="updatePlan" parameterType="Plan">
    update sc_plan set
      place=#{place}, 
      cont=#{description}, 
      memo=#{memo}, 
      cost=#{cost},
      titl=#{title}
    where plan_id=#{no}
  </update>
  
  <delete id="deletePlan" parameterType="int">
    delete from sc_plan
    where plan_id=#{no}
  </delete>
</mapper>







